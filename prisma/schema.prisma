generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEXT_DATABASE_URL")
}

model Promotion {
  id            Int      @id @default(autoincrement())
  title         String   @db.VarChar(255)
  description   String   @db.VarChar(255)
  oldPrice      Int
  newPrice      Int
  link          String
  image         String?
  createdAt     DateTime
  updatedAt     DateTime @default(now())
  sendDate      DateTime @updatedAt
  sourceChannel String
}

model Group {
  id        Int    @id @default(autoincrement())
  name      String
  channelId String
  source    String
}
